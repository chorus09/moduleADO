<Window x:Class="moduleADO.Views.ChoosenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:moduleADO.Views"
        mc:Ignorable="d"
        Title="ChoosenWindow"
        Height="210"
        Width="210"
        FontFamily="Helvetica">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
                Margin="10,30,10,30"
                Content="Clients"
                FontSize="18"
                Click="ClientsWindow_Click"/>
        <Button Grid.Row="1"
                Margin="10,30,10,30"
                Content="Products"
                FontSize="18"
                Click="ProductsWindow_Click"/>
    </Grid>
</Window>
